{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["prettier", "jest"],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "no-new": 0,
    "import/no-unresolved": [2, { "caseSensitive": false }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}
